<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Courgette|Bree+Serif|Alegreya+Sans' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render '/layouts/header' %>
    <div class="top-padding"></div>
    <div class="container fill-height" id="app-window">
      <div class="row fill-height">
          <%= yield %>
      </div>
    </div>
    <%= render '/layouts/footer' %>
  </body>
</html>
