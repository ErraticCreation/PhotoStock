<div class="container-fluid products-box text-center">
  <p class="text-center" id="notice"><%= notice %></p>
  <h1 class="text-center">Listing Products</h1>
  <% @products.each do |product| %>
  <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 product-layout text-center">
    <div>
      <h4><%= product.name %></h4>
    </div>
    <div>
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <br>
      <p><%= product.description %></p>
      <strong>$</strong><br>
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <br>
  </div>
  <% end %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <%= link_to 'New Product', new_product_path %>
  </div>
</div>
