<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 products-margin">
  <div class="col-md-12 product-layout text-center">
    <%= form_for(product) do |f| %>
    <article class="product-body">
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: 'form-control' %>
      <header class="product-header">
        <h4><%= product.name %></h4>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </header>
      <p><%= product.description %></p>
      <%= f.label :description %>
      <%= f.text_area :description, rows: '5', class: 'form-control' %>

      <section>
        <%= f.submit 'Post Changes', class: 'btn btn-default' %>
      </section>
    </article>
    <div>
      <br>
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <br>
    <% end %>
  </div>
</div>
